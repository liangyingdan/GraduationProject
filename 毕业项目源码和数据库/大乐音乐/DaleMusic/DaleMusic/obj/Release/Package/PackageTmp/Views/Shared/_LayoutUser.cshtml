<!DOCTYPE html>
@{ 
    var user = Session["user"] as DaleMusic.Models.UserInfo;
}
<html>
<head>
    <meta charset="utf-8">
    <title>个人设置</title>

    <link href="~/Content/css/nav.css" rel="stylesheet" />
    <link href="~/Content/font/iconfont.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />

    <script src="~/Scripts/js/Userjquery.min.js"></script>
    <script src="~/Scripts/js/nav.js"></script>

    <style type="text/css">
        form {
            width: 500px;
            overflow: hidden;
            margin: 50px auto;
        }

        div {
            /*line-height: 40px;*/
        }

        input {
            width: 250px;
            padding-left: 10px;
            height: 30px;
            line-height: 30px;
            color: #333;
            font-size: 14px;
            border: 1px solid #666;
            outline: none;
            margin-bottom: 10px;
            display: inline-block;
        }

        span {
            display: inline-block;
            float: left;
        }

        .submit {
            width: 120px;
            background: #666;
            color: #fff;
            margin-left: 70px;
            cursor: pointer;
        }

        .content {
            position: absolute;
            left: 600px;
            top: 100px;
        }
    </style>
</head>
<body>
    @*头部*@
    <div class="header">
        @*页面顶部*@
        <div class="container" style="height:65px">
            <!-- header -->
            <!-- logo -->
            @*Logo*@
            <div class="logo">
                <a href="/Music/Index"><img src="~/Content/images/logo.png" title="music" /></a>
            </div>
            <!-- logo -->
            <!-- top-nav -->
            @*导航*@
            <div class="top-nav">
                <span class="menu"> </span>
                <ul>
                    <li style="font-size:1em;"><a href="/Music/Index">首页</a></li>
                    <li style="font-size:1em;"><a href="/MusicList/Index/@user.UserID">我的歌单</a></li>
                    <li class="active" style="font-size:1em;"><a href="/User/Index">个人设置<span> </span></a></li>
                    <div class="clearfix"> </div>
                </ul>
            </div>
            <div class="clearfix"> </div>
            <!-- top-nav -->
            <!-- script-for-menu -->
            <script>
                $(document).ready(function () {
                    $("span.menu").click(function () {
                        $(".top-nav ul").slideToggle(200);
                    });
                });
            </script>
            <!-- script-for-menu -->
        </div>
        <!-- header -->
    </div>


    @*左侧导航*@
    <div class="nav">
        <div class="nav-top">
            <div id="mini" style="border-bottom:1px solid rgba(255,255,255,.1)">
                <img src="~/Content/images/mini.png" />
            </div>
        </div>
        <ul>
            <li class="nav-item">
                <a href="/User/UserDetails/@user.UserID"><i class="my-icon nav-icon icon_1"></i><span>个人资料</span><i class="my-icon nav-more"></i></a>
            </li>

            <li class="nav-item">
                <a href="/Login/UserLogout"><i class="my-icon nav-icon icon_3"></i><span>退出登录</span></a>
            </li>
        </ul>
    </div>
    <div class="content">
        @RenderBody()
    </div>
</body>
</html>
