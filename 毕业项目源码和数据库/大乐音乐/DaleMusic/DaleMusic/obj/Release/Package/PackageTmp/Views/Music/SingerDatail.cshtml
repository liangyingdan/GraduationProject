
@{
    ViewBag.Title = "SingerDatail";
    Layout = "~/Views/Shared/_LayoutMusic.cshtml";
}

@using DaleMusic.Models
@model Singer

<div class="content">
    <div class="container">
        <!-- 内容左侧 -->
        <div class="col-md-8 content-left">
            <!-- artical-single-page -->
            <div class="artical-details">
                <h2 style="font-size:3em">@Model.SingerName</h2>
                <!-- artical-details-info -->
                <div class="artical-details-info">
                    <div class="artical-details-info-left">
                        <a href="~/Music/SingerDatail/@Model.SingerID"><img src="~/Content/歌手图片/@Model.SingerImage" title="name" /></a>
                    </div>
                    <div class="artical-details-info-right" style="font-size:1.5em">
                        <p>
                            <strong>歌手类型：</strong>@if (Model.SingerType == "1")
                            {
                                @:男歌手
                            }
                            else if (Model.SingerType == "0")
                            {
                                @:女歌手
                            }
                            else
                            {
                                @:组合
                            }
                        </p>
                        <br />
                        <a class="download" href="/Music/SingerIndex">返回上一级</a>
                    </div>
                    <table class="table">
                        <tr>
                            <th>音乐名称</th>
                            <th>歌手</th>
                            <th>音乐类型</th>
                            <th>国家</th>
                            <th>封面</th>
                            <th>发布日期</th>
                        </tr>
                        @if (Model.IsDelete == true)
                        {
                            foreach (var item in Model.Music)
                            {
                                <tr>
                                    <td><a href= "/Music/Detail/@item.MusicID">@item.MusicName</a></td>
                                    <td>@item.Singer.SingerName</td>
                                    <td><a href="/Music/TypeDatail/@item.MusicType.TypeID">@item.MusicType.TypeName</a></td>
                                    <td>@item.MusicCountry</td>
                                    <td>
                                        <img src="~/Content/images/@item.MusicImage" style="height:70px;width:50px" />
                                    </td>
                                    <td>@item.MusicDate.Year 年 @item.MusicDate.Month 月</td>
                                </tr>

                            }
                        }

                    </table>
                    @*<div>
                        每页 @Model.PageSize 记录，总有 @Model.PageCount 页，当前 @Model.PageNumber 页
                        @Html.PagedListPager(Model, page => Url.Action("MusicManage", new { page }))
                    </div>*@
                    <div class="clearfix"> </div>

                </div>
                <!-- artical-details-info -->
            </div>
            <!-- related-articals -->
            <!-- artical-single-page -->
            <div class="clearfix"> </div>
        </div>
    </div>
</div>

