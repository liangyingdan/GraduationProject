
@{
    ViewBag.Title = "SingerCreat";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<form action="/Manage/SingerCreat" method="post" class="form" enctype="multipart/form-data" onSubmit="return check(this)">
    <div><span>歌手名称：</span><input type="text" name="SingerName" id="SingerName" placeholder="歌手名称" /><br /></div>
    <div><span>歌手图片：</span>
	<input type="file" name="file" id="file" /><br /></div>
	<div><span>歌手类型：</span>
	<input type="radio" name="SingerType" id="SingerType" value="1" />男歌手
	<input type="radio" name="SingerType" id="SingerType" value="0" />女歌手
	<input type="radio" name="SingerType" id="SingerType" value="2" />组合<br /></div>
    <input type="submit" value="提交" class="submit" />
    <a href="/Manage/SingerManage">返回上一级</a>
</form>
<script type="text/javascript">
function check(){
//			歌手名称
		var name = document.getElementById("SingerName");
		if(name.value==''){
			alert('歌手名称不能为空');
			name.focus();
			return false;
		}else{
			var vname=(/^[a-zA-Z\u4e00-\u9fa5]{2,20}$/);
			if (!vname.test(name.value)) {
				alert('歌手名称2-20个字，只能是中文或英文');
				name.focus();
				return false;
			}
		}
}

</script>

<div style="text-align:center;margin:50px 0; font:normal 14px/24px 'MicroSoft YaHei';">
</div>

