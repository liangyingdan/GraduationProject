
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutMusic.cshtml";
}

@using DaleMusic.Models
@model Music

<div class="content">
    <div class="container">
        <!-- 内容左侧 -->
        <div class="col-md-8 content-left">
            <!-- artical-single-page -->
            <div class="artical-details">
                <h2 style="font-size:3em">@Model.MusicName</h2>
                <!-- artical-details-info -->
                <div class="artical-details-info">
                    <div class="artical-details-info-left">
                        <a href="~/Music/Detail?id=@Model.MusicID"><img src="~/Content/images/@Model.MusicImage" title="name" /></a>
                    </div>
                    <div class="artical-details-info-right" style="font-size:1.5em">
                        <p><strong>发行日期：</strong>@Model.MusicDate.Year 年 @Model.MusicDate.Month 月 </p>
                        <p><strong>类型：</strong>@Model.MusicType.TypeName</p>
                        <p><strong>国家：</strong>@Model.MusicCountry</p>
                        <p><strong>歌手：</strong>@Model.Singer.SingerName</p>
                        <div class="dicription">
                            @*<p><strong>Description :</strong>Cras quis eros eget sem vestibulum malesuada ac nec lectus. Sed sodales ultricies varius. Nullam eu lorem ac justo vestibulum tincidunt. Vivamus id erat sit amet sapien vulputate faucibus sed quis ex.</p>*@
                        </div>
                        <br />
                        @*<a class="download" href="#">播放</a>*@
                        <p>播放：<audio src="~/Content/音频/@Model.MusicFiles" controls="controls"></audio></p>
                        <br />
                        <a class="download" href="/Music/Down?file=@Model.MusicFiles">
                            下载
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-down-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                <path fill-rule="evenodd" d="M4.646 7.646a.5.5 0 0 1 .708 0L8 10.293l2.646-2.647a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-3-3a.5.5 0 0 1 0-.708z" />
                                <path fill-rule="evenodd" d="M8 4.5a.5.5 0 0 1 .5.5v5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5z" />
                            </svg>
                        </a>
                        <br />
                            @if (Model.MusicList.Count() > 0)
                            {
                                <a class="download" href="/MusicList/Create?type=0&id=@Model.MusicID">取消收藏</a>
                            }
                            else
                            {
                                <a class="download" href="/MusicList/Create?type=1&id=@Model.MusicID">收藏</a>
                            }
                        
                        
                        <br />
                        <a class="download" href="/Music/Index">返回上一级</a>
                    </div>
                    <div class="clearfix"> </div>

                </div>
                <!-- artical-details-info -->
            </div>
            <!-- related-articals -->
            <!-- artical-single-page -->
            <div class="clearfix"> </div>
        </div>
        <!-- 内容右侧 -->
        <div class="col-md-4 content-right">
            <div class="recent-add">
                <!----sreen-gallery-cursual---->
                <div class="sreen-gallery-cursual">
                    <!-- requried-jsfiles-for owl -->
                    <link href="~/Content/css/owl.carousel.css" rel="stylesheet" />
                    <script src="~/Scripts/js/owl.carousel.js"></script>
                    <script>
                        $(document).ready(function () {
                            $("#owl-demo").owlCarousel({
                                items: 1,
                                lazyLoad: true,
                                autoPlay: true,
                                navigation: true,
                                navigationText: false,
                                pagination: true,
                            });
                        });
                    </script>
                    <!-- //requried-jsfiles-for owl -->
                    <!-- start content_slider -->
                    <div id="owl-demo" class="owl-carousel text-center">
                        <div class="item">
                            <img class="lazyOwl" src="~/Content/images/酒醉的蝴蝶.jpg" alt="name">
                        </div>
                        <div class="item">
                            <img class="lazyOwl" src="~/Content/images/无价之姐.jpg" alt="name">
                        </div>
                        <div class="item">
                            <img class="lazyOwl" src="~/Content/images/微微.jpg" alt="name">
                        </div>
                    </div>
                    <!--//sreen-gallery-cursual---->
                </div>
            </div>
            <div class="clearfix"> </div>
            <!-- popular-allbums -->
            @*热门音乐*@
            <div class="popular-albums">
                <h2>热门音乐</h2>
                <div class="popular-allbum">
                    <div class="popular-allbum-pic">
                        <a href="#"><img src="~/Content/images/消愁.jpg" title="name" /></a>
                    </div>
                    <div class="popular-allbum-info">
                        <h3><a href="#">消愁</a></h3>
                        <p><strong>发行日期：</strong>  2014年3月20日</p>
                        <p><strong>类型：</strong>流行</p>
                        <p><strong>国家：</strong>中国</p>
                        <p><strong>歌手：</strong> 毛不易</p>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="popular-allbum">
                    <div class="popular-allbum-pic">
                        <a href="#"><img src="~/Content/images/大鱼海棠.jpg" title="name" /></a>
                    </div>
                    <div class="popular-allbum-info">
                        <h3><a href="#">大鱼海棠</a></h3>
                        <p><strong>发行日期：</strong>  2014年3月20日</p>
                        <p><strong>类型：</strong>影视</p>
                        <p><strong>国家：</strong>中国</p>
                        <p><strong>歌手：</strong> 周深</p>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="popular-allbum">
                    <div class="popular-allbum-pic">
                        <a href="#"><img src="~/Content/images/知否知否.jpg" title="name" /></a>
                    </div>
                    <div class="popular-allbum-info">
                        <h3><a href="#">知否知否</a></h3>
                        <p><strong>发行日期：</strong>  2014年3月20日</p>
                        <p><strong>类型：</strong>影视</p>
                        <p><strong>国家：</strong>中国</p>
                        <p><strong>歌手：</strong> 郁可唯</p>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
            <!-- popular-allbums -->
            <!-- content-right -->
        </div>
    </div>
</div>



